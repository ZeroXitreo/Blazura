@implements IModalContainer

@username

@code {
    [Parameter] public required ModalManager ModalManager { get; set; }
    [Parameter] public required Modal ModalRef { get; set; }

    [Parameter] public required string username { get; set; }

    public static void Open(ModalManager? modalManager, string username)
    {
        modalManager?.Open<ModalSimple>("Title", new()
        {
            { nameof(username), username },
        });
    }
}
