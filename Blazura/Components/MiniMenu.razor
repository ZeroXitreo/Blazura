@using static Blazura.Components.ULIconButton

<ULIconButton Type="@Type" Icon="@Icon" @onclick="(e) => contextMenu.Open(e)" />
<ContextMenu @ref="contextMenu">
    @ChildContent
</ContextMenu>

@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public string Icon { get; set; } = "more_vert";
    [Parameter] public ULIconButtonType Type { get; set; }

    private ContextMenu contextMenu = default!;
}
