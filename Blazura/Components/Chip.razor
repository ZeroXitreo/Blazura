<div class="Chip @Colour?.ToString().ToLower()" title="@Description">
	@Text
</div>

@code {
	[Parameter, EditorRequired]
	public required string Text { get; set; }

	[Parameter]
	public Color? Colour { get; set; }

	[Parameter]
	public string? Description { get; set; }

	// [Parameter]
