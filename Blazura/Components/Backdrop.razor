@using Microsoft.JSInterop
@inject IJSRuntime JSRuntime

@code {
    private HashSet<Type> backdropsByType = [];
    public void SetBackdrop(Type type, bool hasBackdrop)
    {
        if (!hasBackdrop) {
            backdropsByType.Remove(type);
        }
        else
        {
            backdropsByType.Add(type);
        }

        JSRuntime.InvokeVoidAsync(backdropsByType.Any() ? "disableBodyScroll" : "enableBodyScroll");
    }
}
