<div class="BadgeContainer">
	@ChildContent
	<div class="Badge @(HideBadge ? "hidden" : null) @(BadgeAnchor.ToString())">@Text</div>
</div>

@code {
	[Parameter]
	public RenderFragment? ChildContent { get; set; }

	[Parameter]
	public object? Text { get; set; }

	[Parameter]
	public bool HideBadge { get; set; }

	[Parameter]
    public BadgeAnchor BadgeAnchor { get; set; } = BadgeAnchor.TopRight;
}
